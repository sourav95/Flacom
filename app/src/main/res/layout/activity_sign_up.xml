<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/mainbg"
    tools:context="com.example.invinciblesourav.flacom.SignUpActivity">
    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/signupback"
        android:orientation="vertical"
        android:padding="15pt">

        <TextView
            android:id="@+id/signin_caption2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Get started"
            android:textAlignment="center"
            android:textColor="#fff"
            android:textColorHighlight="#eeee"
            android:textSize="18pt" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="15pt" />

        <TextView
            android:id="@+id/signin_caption1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sign up"
            android:textAlignment="center"
            android:textColor="#fff"
            android:textSize="12pt" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="15pt" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="9pt"
            android:background="@drawable/whiteunderline"
            android:gravity="center_horizontal"
            android:orientation="horizontal"

            android:paddingBottom="5pt">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginTop="1.9pt"
                android:src="@drawable/phoneicon" />

            <Space
                android:layout_width="14dp"
                android:layout_height="match_parent" />

            <EditText
                android:id="@+id/signin_mobile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="Mobile number"
                android:inputType="number"
                android:textAlignment="textStart"
                android:textColorHint="#77f5f5f5"
                android:textSize="10pt" />
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="10pt" />


        <ImageButton
            android:id="@+id/signin_proceed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="#0000ffff"
            android:src="@drawable/proceed1" />
    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"/>


</LinearLayout>
